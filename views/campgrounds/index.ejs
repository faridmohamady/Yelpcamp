<%-include('../partials/header.ejs')%>

<div class="container text-center">
	<header class='jumbotron'>
		<div class='container'>
			<h1>This Is The Campground</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p>
				<a class='btn btn-primary btn-lg' href='/campgrounds/new'>
					Add new Campground</a>
			</p>
		</div>
	</header>
	
	<div class='row container'>
		<% campgrounds.forEach(function(camp){ %>
		<div class='col-12 col-sm-6 col-md-3'>
			<div class='img-thumbnail'>
				<img class="img-fluid" alt="Responsive image" src= '<%=camp.image%>'>
				<div class='caption'>
					<h4><%= camp.name%></h4>
				</div>
				<p>
					<a href='/campgrounds/<%= camp._id %>' class='btn btn-primary btn-sm'>Show Info</a>
				</p>
			</div>
		</div>
		<% }) %>	
	</div>
	
</div>

<%-include('../partials/footer.ejs')%>

