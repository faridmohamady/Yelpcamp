<%-include('../partials/header')%>
<div class='container'>
	<p class='d-block text-center mt-5'>Edit <%=campground.name%></p>
	<div class='d-flex justify-content-center mt-0'>
		<form class=''  method= post action='/campgrounds/<%=campground._id%>?_method=put'>
			<div class='form-group'>
				<input class='form-control' name='camp[name]' placeholder='Name' 
					   type='text' value='<%=campground.name%>'>
			</div>
			<div class='form-group'>
				<input class='form-control' name='camp[price]' 
					   type='text' value='<%=campground.price%>'>
			</div>
			<div class='form-group'>
				<input class='form-control' name='camp[image]'
					   type='text' value='<%=campground.image%>'>
			</div>
			<div class='form-group'>
				<input class='form-control' name='camp[description]' 
					  type='text' value='<%=campground.description%>'>
			</div>
			<div class='form-group'>
  				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</div>
			<a href="/campgrounds">Go Back</a>
		</form>
	</div>
	
</div>


<%-include('../partials/footer')%>
