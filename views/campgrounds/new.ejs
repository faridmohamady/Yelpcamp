<%-include('../partials/header')%>
<div class='container'>
	<p class='d-block text-center mt-5'>Create New Campground</p>
	<div class='d-flex justify-content-center mt-0'>
		<form class=''  method= post action='/campgrounds'>
			<div class='form-group'>
				<input class='form-control' name='name' placeholder='Name' type='text'>
			</div>
			<div class='form-group'>
				<input class='form-control' name='price' placeholder='Price' type='number'
					   min='0.01' step='0.01'>
			</div>
			<div class='form-group'>
				<input class='form-control' name='image' placeholder='Image url'
					   type='text'>
			</div>
			<div class='form-group'>
				<input class='form-control' name='description' placeholder='Description'
					   type='text'>
			</div>
			<div class='form-group'>
  				<button type="submit" class="btn btn-primary btn-block">Submit</button>
			</div>
			<a href="/campgrounds">Go Back</a>
		</form>
	</div>
	
</div>


<%-include('../partials/footer')%>
